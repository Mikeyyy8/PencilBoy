generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String?
  category    String?
  createdAt   DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}
